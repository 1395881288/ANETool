<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">


    <s:Button label="Call native hello" id="btnSayHello" click="btnSayHello_clickHandler(event)"/>
    <fx:Script><![CDATA[
        import com.plter.hello.HelloNative;

        private function btnSayHello_clickHandler(event:MouseEvent):void {
            var h:HelloNative = new HelloNative();
            h.sayHello();
        }
        ]]></fx:Script>
</s:View>
